@model PrHeredades.Models.tbPagoDeudor

@{
    ViewBag.Title = "Pagar";
}

<form action="@Url.Action("Pagar")" method="post" id="formPagoDeudor">
    @Html.AntiForgeryToken()
    <h2>Pagar a <strong>@ViewBag.proveedor</strong></h2>
    <hr />
    <input type="hidden" value="@ViewBag.codDeudor" id="codDeudor" name="codDeudor" />
    <h4>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</h4>
    <div class="form-group">
        <label for="pago" class="col-form-label">Monto</label>
        @Html.TextBoxFor(t => t.pago, new { @class = "form-control col-md-4", autocomplete = "off", maxlength = "50" })
    </div>
    <div class="form-group col-md-4 text-center" style="padding-left:0; padding-right:0">
        <button type="submit" class="btn btn-primary" style="width: 150px">
            <span class="fa fa-check"></span> Debitar
        </button>
        <a href="@Url.Action("Pagos", new { id = ViewBag.codDeudor })" class="btn btn-danger" style="width: 150px">
            <span class="fa fa-times"></span> Cancelar
        </a>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jqueryValidator/pagoDeudor.js"></script>
}
