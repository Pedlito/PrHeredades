@model PrHeredades.Models.tbDeudor

@{
    ViewBag.Title = "Crear";
}

<form action="@Url.Action("Crear")" method="post" id="formDeudor">
    @Html.AntiForgeryToken()
    <h2>Crear Deudor</h2>
    <hr />
    <h4>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</h4>
    <div class="form-group">
        <label for="nombre" class="col-form-label">Nombre</label>
        @Html.TextBoxFor(t => t.nombre, new { @class = "form-control col-md-4", autocomplete = "off", maxlength = "50" })
    </div>
    <div class="form-group">
        <label for="telefono" class="col-form-label">Teléfono</label>
        @Html.TextBoxFor(t => t.telefono, new { @class = "form-control col-md-4", autocomplete = "off", maxlength = "10" })
    </div>
    <div class="form-group">
        <label for="residencia" class="col-form-label">Residencia</label>
        @Html.TextBoxFor(t => t.residencia, new { @class = "form-control col-md-4", autocomplete = "off", maxlength = "50" })
    </div>
    <div class="form-group">
        <label for="refUno" class="col-form-label">Referencia uno</label>
        @Html.TextBoxFor(t => t.refUno, new { @class = "form-control col-md-4", autocomplete = "off", maxlength = "10" })
    </div>
    <div class="form-group">
        <label for="refDos" class="col-form-label">Referencia dos</label>
        @Html.TextBoxFor(t => t.refDos, new { @class = "form-control col-md-4", autocomplete = "off", maxlength = "50" })
    </div>
    <div class="form-group col-md-4 text-center" style="padding-left:0; padding-right:0">
        <button type="submit" class="btn btn-primary" style="width: 150px">
            <span class="fa fa-check"></span> Crear
        </button>
        <a href="@Url.Action("Index")" class="btn btn-danger" style="width: 150px">
            <span class="fa fa-times"></span> Cancelar
        </a>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jqueryValidator/deudor.js"></script>
}
