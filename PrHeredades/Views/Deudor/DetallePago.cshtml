@model PrHeredades.Models.tbPagoDeudor

@{
    ViewBag.Title = "Detalle de pago";
}

<h2>Detalle de pago</h2>
<hr />

<dl class="dl-horizontal">
    <dt class="col-12">Deudor</dt>
    <dd class="col-12">@Model.tbDeudor.nombre</dd>

    <dt class="col-12">Usuario</dt>
    <dd class="col-12">@Model.tbUsuario.nombre</dd>

    <dt class="col-12">Pago</dt>
    <dd class="col-12">@Model.pago</dd>

    <dt class="col-12">Fecha</dt>
    <dd class="col-12">@Model.fecha.Value.ToLongDateString()</dd>

    <dt class="col-12">Hora</dt>
    <dd class="col-12">@Model.fecha.Value.ToShortTimeString()</dd>
</dl>

<div class="form-group">
    <a href="@Url.Action("Pagos", new { id = Model.codDeudor })" class="btn btn-dark" style="width: 150px">
        <span class="fa fa-arrow-left"></span> Regresar
    </a>
</div>