@model PrHeredades.Models.tbUsuario

@{
    ViewBag.Title = "Registrarse";
}

<form action="@Url.Action("Registrarse")" method="post" id="formUsuario">
    <h2>Registrarse</h2>
    <hr />  
    <div class="form-group">
        <label for="nombre" class="col-form-label">Nombre</label>
        <input type="text" class="form-control col-md-4" id="nombre" name="nombre" autocomplete="off" />
    </div>
    <div class="form-group">
        <label for="usuario" class="col-form-label">Usuario</label>
        <input type="text" class="form-control col-md-4" id="usuario" name="usuario" autocomplete="off" />
    </div>
    <div class="form-group">
        <label for="password" class="col-form-label">Contraseña</label>
        <input type="password" class="form-control col-md-4" id="password" name="password">
    </div>
    <div class="form-group">
        <label for="repetir">Repetir contraseña</label>
        <input type="password" class="form-control col-md-4" id="repetir" name="repetir">
    </div>
    <div class="form-group col-md-4 text-center">
        <button type="submit" class="btn btn-primary" onclick="hola()" style="width: 150px">
            <span class="fa fa-user-plus"></span> Registrar
        </button>
        <a href="@Url.Action("IniciarSesion", "Cuenta")" class="btn btn-info" style="width: 150px">
            <span class="fa fa-ban"></span> Cancelar
        </a>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jqueryValidator/usuario.js"></script>
}
