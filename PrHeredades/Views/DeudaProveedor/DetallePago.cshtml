@model PrHeredades.Models.tbPagoProveedor

@{
    ViewBag.Title = "DetallePago";
}

<h2>Detalle de pago</h2>
<hr />

<dl class="dl-horizontal">
    <dt class="col-12">Proveedor</dt>
    <dd class="col-12">@Model.tbProveedor.proveedor</dd>

    <dt class="col-12">Usuario</dt>
    <dd class="col-12">@Model.tbUsuario.nombre</dd>

    <dt class="col-12">Fecha</dt>
    <dd class="col-12">@Model.fecha.ToLongDateString()</dd>

    <dt class="col-12">Hora</dt>
    <dd class="col-12">@Model.fecha.ToShortTimeString()</dd>

    <dt class="col-12">Pago</dt>
    <dd class="col-12">Q @Model.pago</dd>

    <dt class="col-12">Descripción</dt>
    <dd class="col-12">@Model.descripcion</dd>
</dl>

<hr />

<div class="form-group">
    <a href="@Url.Action("VerPagos", new { id = Model.codProveedor })" class="btn btn-dark" style="width: 150px">
        <span class="fa fa-arrow-left"></span> Regresar
    </a>
</div>