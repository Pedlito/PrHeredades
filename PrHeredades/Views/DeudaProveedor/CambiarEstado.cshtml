@model PrHeredades.Models.tbPagoProveedor

@{
    ViewBag.Title = "CambiarEstado";
}

<h2>Cambiar Estado</h2>

<h3>
    ¿Realmente quieres
    @if (Model.estado)
    {
        <strong>Deshabilitar</strong>
    }
    else
    {
        <strong>Habilitar</strong>
    }
    esta presentación?
</h3>


<div>
    <hr />
    <div class="form-group">
        <label for="tbProveedor_proveedor" class="col-form-label">Proveedor</label>
        @Html.TextBoxFor(m => m.tbProveedor.proveedor, new { @class = "form-control col-md-4", @readonly = "readonly" })
    </div>

    <div class="form-group">
        <label for="tbUsuario_nombre" class="col-form-label">Usuario</label>
        @Html.TextBoxFor(m => m.tbUsuario.nombre, new { @class = "form-control col-md-4", @readonly = "readonly" })
    </div>

    <div class="form-group">
        <label for="fecha" class="col-form-label">Fecha</label>
        <input type="text" id="fecha" name="fecha" class="form-control col-md-4" value="@Model.fecha.ToLongDateString()" readonly />
    </div>

    <div class="form-group">
        <label for="hora" class="col-form-label">Hora</label>
        <input type="text" id="hora" name="hora" class="form-control col-md-4" value="@Model.fecha.ToShortTimeString()" readonly />

    </div>

    <div class="form-group">
        <label for="pago" class="col-form-label">Pago</label>
        @Html.TextBoxFor(m => m.pago, new { @class = "form-control col-md-4", @readonly = "readonly" })
    </div>

    <div class="form-group">
        <label for="descripcion" class="col-form-label">Descripción</label>
        @Html.TextBoxFor(m => m.descripcion, new { @class = "form-control col-md-4", @readonly = "readonly" })
    </div>

    <form action="@Url.Action("CambiarEstado")" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.codPagoProveedor)

        <div class="form-group col-md-4 text-center" style="padding-left:0; padding-right:0">
            <button type="submit" class="btn btn-primary" style="width: 150px">
                <span class="fa fa-check"></span>
                @if (Model.estado)
                {<text>Deshabilitar</text> }
                else
                { <text>Habilitar</text>}
            </button>
            <a href="@Url.Action("VerPagos", new { id = Model.codProveedor })" class="btn btn-danger" style="width: 150px">
                <span class="fa fa-times"></span> Cancelar
            </a>
        </div>
    </form>
</div>

