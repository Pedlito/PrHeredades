@model IEnumerable<PrHeredades.Models.tbRol>

@{
    ViewBag.Title = "Index";
}

<h2>Roles</h2>
<p>
    <a class="btn btn-success" href="@Url.Action("Crear")">
        <span class="fa fa-plus"></span> Nuevo rol
    </a>
</p>
<table class="table table-sm table-hover">
    <thead>
        <tr class="table-primary">
            <th scope="col">
                @Html.DisplayNameFor(model => model.rol)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.rol)
                </td>
                <td class="align-middle">
                    <a href="@Url.Action("Editar", new { id = item.codRol })" class="btn btn-warning btn-sm">
                        <span class="fa fa-edit"></span> Editar
                    </a>
                    <a href="@Url.Action("Permisos", new { id = item.codRol })" class="btn btn-primary btn-sm">
                        <span class="fa fa-list"></span> Permisos
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>