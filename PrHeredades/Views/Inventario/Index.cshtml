@model IEnumerable<PrHeredades.Models.tbProductoPresentacion>

@{
    ViewBag.Title = "Crear";
}

<h2>Inventario</h2>

<hr />

<table class="table table-sm table-hover">
    <thead>
        <tr class="table-primary">
            <th scope="col">
                Producto
            </th>
            <th scope="col">
                Presentación
            </th>
            <th scope="col" class="text-center">
                Existencias
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    @item.tbProducto.producto
                </td>
                <td class="align-middle">
                    @item.tbPresentacion.presentacion
                </td>
                <td class="align-middle text-center">
                    @item.existencia
                </td>  
            </tr>
        }
    </tbody>

</table>


