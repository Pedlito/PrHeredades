@model IEnumerable<PrHeredades.Models.tbProductoProveedor>

@if (Model != null)
{
    <table class="table table-sm table-hover">
        <thead>
            <tr class="table-primary">
                <th scope="col">
                    Producto
                </th>
                <th scope="col">
                    Presentación
                </th>
                <th scope="col" class="text-center">
                    Precio compra
                </th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @item.tbProductoPresentacion.tbProducto.producto
                    </td>
                    <td class="align-middle">
                        @item.tbProductoPresentacion.tbPresentacion.presentacion
                    </td>
                    <td class="align-middle text-center">
                        Q @item.precioCompra
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-warning btn-sm" onclick="Editar(@item.codProducto, '@item.tbProductoPresentacion.tbProducto.producto', @item.codPresentacion, '@item.tbProductoPresentacion.tbPresentacion.presentacion')">
                            <span class="fa fa-edit"></span> Editar precio
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" onclick="Quitar(@item.codProducto, @item.codPresentacion)">
                            <span class="fa fa-times"></span> Quitar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}



