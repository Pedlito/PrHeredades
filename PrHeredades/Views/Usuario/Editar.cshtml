@model PrHeredades.Models.tbUsuario

@{
    ViewBag.Title = "Editar";
}

<form action="@Url.Action("Editar")" method="post" id="formUsuario">
    @Html.AntiForgeryToken()
    <h2>Editar</h2>
    <hr />
    <h4>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</h4>
    @Html.HiddenFor(m => m.codUsuario)
    <div class="form-group">
        <label for="rol" class="col-form-label">Rol</label>
        @Html.DropDownListFor(m => m.codRol, null, htmlAttributes: new { @class = "form-control col-md-4" })
    </div>
    <div class="form-group">
        <label for="nombre" class="col-form-label">Nombre</label>
        @Html.TextBoxFor(m => m.nombre, new { @class="form-control col-md-4", autocomplete="off" })
    </div>
    <div class="form-group">
        <label for="usuario" class="col-form-label">Usuario</label>
        @Html.TextBoxFor(m => m.usuario, new { @class = "form-control col-md-4", autocomplete = "off" })
    </div>
    <div class="form-group">
        <label for="password" class="col-form-label">Contraseña</label>
        @Html.PasswordFor(m => m.password, new { @class = "form-control col-md-4" })
    </div>
    <div class="form-group col-md-4 text-center">
        <button type="submit" class="btn btn-primary" style="width: 150px">
            <span class="fa fa-check"></span> Editar
        </button>
        <a href="@Url.Action("Index")" class="btn btn-danger" style="width: 150px">
            <span class="fa fa-times"></span> Cancelar
        </a>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jqueryValidator/usuario.js"></script>
}