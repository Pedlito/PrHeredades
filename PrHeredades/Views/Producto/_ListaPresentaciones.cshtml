@model IEnumerable<PrHeredades.Models.tbProductoPresentacion>

@{
    ViewBag.Title = "_ListaPresentaciones";
}

<table class="table table-sm table-hover">
    <thead>
        <tr class="table-primary">
            <th scope="col">
                Presentación
            </th>
            <th scope="col" class="text-center">
                Precio Mínimo
            </th>
            <th scope="col" class="text-center">
                Precio Medio
            </th>
            <th scope="col" class="text-center">
                Precio Máximo
            </th>
            <th scope="col" class="text-center">
                Agregado
            </th>
            <th scope="col" class="text-center">
                Unidades
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="align-middle">
                @item.tbPresentacion.presentacion
            </td>
            <td class="align-middle text-center">
                Q @item.precioVentaMinimo
            </td>
            <td class="align-middle text-center">
                Q @item.precioVentaMedio
            </td>
            <td class="align-middle text-center">
                Q @item.precioVentaMaximo
            </td>
            <td class="align-middle text-center">
                Q @item.agregado
            </td>
            <td class="align-middle text-center">
                @item.unidades
            </td>
        </tr>
        }
    </tbody>
</table>

