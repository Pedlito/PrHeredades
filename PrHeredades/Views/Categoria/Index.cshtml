@model IEnumerable<PrHeredades.Models.tbCategoria>
@using PrHeredades.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Categorías</h2>

<p>
    <a class="btn btn-success" href="@Url.Action("Crear")">
        <span class="fa fa-plus"></span> Nueva categoría
    </a>
</p>

<hr />
<!-- Filtros -->
<form action="@Url.Action("Index")" method="get" class="form-group">
    <div class="form-group">
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            @if (ViewBag.estado)
            {
                <label class="btn btn-primary active">
                    <input type="radio" name="estado" id="estado" value=True checked onchange="this.form.submit()" > Habilitados
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="estado" id="estado" value=False onchange="this.form.submit()" > Deshabilitados
                </label>
            }
            else
            {
                <label class="btn btn-primary">
                    <input type="radio" name="estado" id="estado" value=True onchange="this.form.submit()" > Habilitados
                </label>
                <label class="btn btn-primary active">
                    <input type="radio" name="estado" id="estado" value=False checked onchange="this.form.submit()" > Deshabilitados
                </label>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <input type="text" placeholder="Nombre de categoría" class="form-control" id="filtro" name="filtro" value="@ViewBag.filtro" autocomplete="off" />
        </div>
        <button type="submit" class="btn btn-info">
            <span class="fa fa-search"></span> Filtrar
        </button>
    </div>
</form>
<hr />

<table class="table table-sm table-hover">
    <thead>
        <tr class="table-primary">
            <th scope="col">
                Categoría
            </th>
            <th scope="col" class="text-center">
                Estado
            </th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    @item.categoria
                </td>
                <td class="align-middle text-center">
                    @if (item.estado.Value)
                    {
                        <span class="fa fa-check-square"></span>
                    }
                    else
                    {
                        <span class="fa fa-square"></span>
                    }
                </td>
                <td class="align-middle">
                    <a href="@Url.Action("Editar", new { id = item.codCategoria })" class="btn btn-warning btn-sm">
                        <span class="fa fa-edit"></span> Editar
                    </a>
                    <a href="@Url.Action("CambiarEstado", new { id = item.codCategoria })" class="align-middle">
                        @if (item.estado.Value)
                        {
                            <text>Deshabilitar</text>
                        }
                        else
                        {
                            <text>Habilitar</text>
                        }
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>

@Html.Partial("_Paginacion", (Paginacion)ViewBag.paginacion)
